										class="input input-bordered w-full h-14 text-lg bg-gray-800/80 border-primary-pink/30 focus:border-primary-pink text-white placeholder-gray-500 px-5" 
										required 
									/>
								</div>
							</div>

							<div class="grid md:grid-cols-2 gap-8">
								<!-- Email -->
								<div class="form-control">
									<label for="email" class="label pb-3">
										<span class="label-text text-gray-300 font-medium text-base">Email *</span>
									</label>
									<input 
										type="email" 
										id="email" 
										name="email"
										placeholder="votre.email@exemple.com" 
										class="input input-bordered w-full h-14 text-lg bg-gray-800/80 border-primary-pink/30 focus:border-primary-pink text-white placeholder-gray-500 px-5" 
										required 
